doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title JogTrax - #{title}
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/style.css')
    block styles
    script(src='js/jquery.min.js')
    block scripts
  body.body
    if messages.error
      .alert.alert-danger.fade.in
        div= messages.error
    .col-sm-6.col-sm-offset-3
      .panel.panel-default
        block content
        .panel-footer
          a.footer-link(href='/') Home
          a.footer-link(href='/about') About
          if user
            a.footer-link(href='/stats') Stats
            a.footer-link(href='/settings') Settings
            a.footer-link(href='/logout') Log out