extends layout

block content
  .panel-heading
    h2 Welcome to JogTrax!
  .panel-body
    form(action='/', method='post')
      input(type='hidden', name='_csrf', value=_csrf)
      input#email(name='email', placeholder="Your email", required, autofocus)
      input#password(type='password', name='password', placeholder="Password", required)
      input(type='submit', value='Log in')
    h4.text-center New member? 
      a(href='/register') Click here to register.